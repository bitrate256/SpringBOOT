<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOCAL_LOGS" value="./logs"/>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <appender name="localInfoRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <prudent>true</prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOCAL_LOGS}/CMS_INFO.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>%d{yyyy:MM:dd HH:mm:ss.SSS} %-5level --- [%thread] %logger{35} : %msg %n</pattern>
        </encoder>
    </appender>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.thymeleaf" level="INFO"/>
    <logger name="org.hibernate.SQL" level="INFO"/>
    <logger name="org.quartz.core" level="INFO"/>
    <logger name="org.h2.server.web" level="INFO"/>
    <root level="INFO">
        <appender-ref ref="localInfoRollingFileAppender"/>
    </root>
    <appender name="localErrorRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <prudent>true</prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOCAL_LOGS}/CMS_ERROR.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>%d{yyyy:MM:dd HH:mm:ss.SSS} %-5level --- [%thread] %logger{35} : %msg %n</pattern>
        </encoder>
    </appender>
    <logger name="org.springframework.web" level="ERROR"/>
    <logger name="org.thymeleaf" level="ERROR"/>
    <logger name="org.hibernate.SQL" level="ERROR"/>
    <logger name="org.quartz.core" level="ERROR"/>
    <logger name="org.h2.server.web" level="ERROR"/>
    <root level="ERROR">
        <appender-ref ref="localErrorRollingFileAppender"/>
    </root>
    <appender name="localDebugRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <prudent>true</prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOCAL_LOGS}/CMS_DEBUG.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>%d{yyyy:MM:dd HH:mm:ss.SSS} %-5level --- [%thread] %logger{35} : %msg %n</pattern>
        </encoder>
    </appender>
    <logger name="org.springframework.web" level="DEBUG"/>
    <logger name="org.thymeleaf" level="DEBUG"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.quartz.core" level="DEBUG"/>
    <logger name="org.h2.server.web" level="DEBUG"/>
    <root level="DEBUG">
        <appender-ref ref="localDebugRollingFileAppender"/>
    </root>
</configuration>
